# Application Settings
APP_NAME="Fraud Detection API"
APP_VERSION="0.1.0"
DEBUG=true

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Fraud Detection Settings
MAX_TRANSACTIONS_PER_REQUEST=100
RISK_SCORE_THRESHOLD=0.7

# PII Masking Settings
PII_MASK_ENABLED=true
MAX_PII_FIELDS_ALLOWED=2

# Citation Settings
ALLOWED_CITATION_DOMAINS=["example.com", "trusted-source.com", "official-docs.com"]

# Red Team Testing
ENABLE_RED_TEAM_DETECTION=true

# OpenTelemetry
OTEL_ENABLED=true
OTEL_SERVICE_NAME="fraud-detection-api"